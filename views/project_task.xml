<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="task_types_view_form" model="ir.ui.view">
        <field name="name">task_types.view.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="sale_timesheet.project_task_view_form_inherit_sale_timesheet"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='timesheet_ids']//field[@name='name']" position="before">
                <field name="line_type_id"
                    attrs="{
                    'column_invisible': [('parent.sale_line_id', '!=', False)],
                    'required': [('parent.sale_line_id', '!=', False)]
                }"
                />
            </xpath>
            <xpath expr="//field[@name='timesheet_ids']/tree/field[@name='so_line']"
                position="attributes">
                <attribute name="optional"/>
                <attribute name="domain"> [('is_service', '=', True), ('order_partner_id',
                    'child_of', parent.commercial_partner_id), ('is_expense', '=', False), ('state',
                    'in', ['sale', 'done']), ('order_id', '=', parent.sale_order_id)] </attribute>
            </xpath>
        </field>
    </record>
</odoo>
